/*
 * -------------------------------------------------
 *  Nextflow config file for running on JAX's Sumner HPC
 * -------------------------------------------------
 * Base config needed for running with -profile sumner
 */

process {
  executor = 'slurm'
  beforeScript = 'module load singularity/3.4.1'
}
singularity {
  enabled = true
  cacheDir = "$HOME/.singularity_cache"
  autoMounts = true
}
params.adapter = '/projects/anczukow-lab/tools/Trimmomatic-0.39/adapters/TruSeq3-PE.fa'
