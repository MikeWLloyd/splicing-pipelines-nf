/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run jacksonlabs/splicing-pipelines-nf -profile test
 * 
 * Note:  This is configured for cloud execution and not for sumner
 */

params {
  // Input data
  singleEnd  = true
  reads      = "examples/testdata/single_end_reads_sumner.csv"
  // Genome references
  gtf        = "/projects/adeslat/igenomes/Homo_sapiens/NCBI/GRCh38/Sequence/GenesGTFTest/genes.gtf'
  star_index = "/projects/adeslat/igenomes/Homo_sapiens/NCBI/GRCh38/Sequence/STARTest/star.tar.gz'
  // Other
  overhang = 100

  // Limit resources
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h
}